<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:layout_margin="5dp"
    >
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="100dp"
    android:gravity="center_vertical" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:gravity="center" binding:text="question" android:id="@id/textview" android:layout_weight="1"/>
    </ScrollView>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="75dp" android:layout_marginTop="-90dp"
                  android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                  android:orientation="horizontal" android:gravity="center">
        <Button android:layout_width="100dp" android:layout_height="fill_parent"  android:layout_weight=".40"
                android:text="Yes" binding:onClick="yes" android:id="@id/Yes" />
        <Button android:layout_width="75dp" android:layout_height="fill_parent" android:layout_weight=".20"
                android:text="\?" binding:onClick="help" android:id="@id/Explanation" />
        <Button android:layout_width="100dp" android:layout_height="fill_parent" android:layout_weight=".40"
                android:text="No" binding:onClick="no" android:id="@id/No" />

    </LinearLayout>

</LinearLayout>